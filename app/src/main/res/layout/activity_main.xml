<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/xml_editText_mainActivity_nomMusicien"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:hint="@string/phrase_nomMusicien"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/xml_number_mainActivity_nombreEtoiles"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:hint="@string/phrase_nombreDEtoiles"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/xml_editText_mainActivity_nomMusicien" />

    <Switch
        android:id="@+id/xml_switch_mainActivity_selecteurMusiciens"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="@string/phrase_musicienSelectionne"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/xml_number_mainActivity_nombreEtoiles" />

    <Button
        android:id="@+id/xml_mainActivity_btn_voirTout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/phrase_voirTout"
        app:layout_constraintEnd_toStartOf="@+id/xml_mainActivity_btn_ajouter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/xml_switch_mainActivity_selecteurMusiciens" />

    <Button
        android:id="@+id/xml_mainActivity_btn_ajouter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mot_ajouter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/xml_mainActivity_btn_voirTout"
        app:layout_constraintTop_toTopOf="@+id/xml_mainActivity_btn_voirTout" />

    <ListView
        android:id="@+id/xml_mainActivity_listView_musiciens"
        android:layout_width="409dp"
        android:layout_height="532dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/xml_mainActivity_btn_voirTout" />
</android.support.constraint.ConstraintLayout>